<% @categories.each do |c| %>
  <tr>
    <td><%= c.name %></td>
    <td><%= c.desc %></td>
    <td><%= link_to 'Show', c %></td>
    <td><%= link_to 'Edit', edit_category_path(c) %></td>
    <td><%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

